<h1>Burger Time!</h1>
<image src="/images/burger.png" class="burgergif"></image>

<div class="container">
  <div class="leftList">

    <h2>Burgers Ready!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
          <li>
            <p>
               {{> burgers/burgers-block devoured=false}}
            </p>
          </li>
           
          {{/unless}}
        {{/each}}
      </ul>
  </div>

  <div class="middleList">
    <h2>Add a Burger</h2>
    
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>

  <div class="rightList">
    <h2>Burgers devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burgers-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>


