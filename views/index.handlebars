<h1>VegaBurger</h1>
<image src="/images/burger.png" class="burgergif"></image>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4" id= "burgerlist">
        <h3>Burgers Ready!</h3>

          <ul>
            {{#each burgers}}
              {{#unless devoured}}
              <li>
                <p>
                  {{> burgers/burgers-block devoured=false}}
                </p>
              </li>
              
              {{/unless}}
            {{/each}}
          </ul>
      </div>

      <div class="col-md-4" id= "middleList">
        <h2>Add a Burger</h2>
        
          <form class="create-form">

            <div class="form-group">
              <label for="burger" class="heading">Burger Name:</label>
              <br>
              <input type="text" id="burger" name="burger_name">
            </div>

            <button type="submit" class="btn btn-danger">Add Burger</button>
          </form>
      </div>

      <div class="col-md-4" id= "burgerlist">
        <h3>Burgers Devoured!</h3>

          <ul>
            {{#each burgers}}
              {{#if devoured}}
              <li>
                <p>
                    {{> burgers/burgers-block2 devoured=true}}
                </p>
              </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
    </div>  
  </div>


