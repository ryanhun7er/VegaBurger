<h1>Burger Time!</h1>
<image src="/images/burger.png" class="burgergif"></image>

<div class="container">
  <div class="leftList">

    <h2>Burgers ready to be devoured</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>

  <div class="middleList">
    <h2>Add a Burger</h2>
    
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Ready to be devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>

  <div class="rightList">
    <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>


